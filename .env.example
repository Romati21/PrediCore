# Environment
ENVIRONMENT="development"  # or "production"

# Database Settings
DATABASE_URL="postgresql://user:password@localhost/db_name"
TEST_DATABASE_URL="postgresql://test_user:test_password@localhost/test_db"
SQL_ECHO="False"  # Set to "True" to enable SQL query logging

# JWT Settings
JWT_SECRET_KEY="your-secret-key-here"  # Use a strong random key in production
JWT_ALGORITHM="HS256"
JWT_ACCESS_TOKEN_EXPIRE_MINUTES=30
JWT_REFRESH_TOKEN_EXPIRE_DAYS=7

# Email Settings
EMAIL_SENDER="your-email@gmail.com"
EMAIL_PASSWORD="your-app-specific-password"  # Use app-specific password for Gmail
SMTP_SERVER="smtp.gmail.com"
SMTP_PORT=465
